<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <ListView android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:divider="@color/brown_color"
        android:dividerHeight="1dp"
        android:layout_above="@+id/btn_show_map"
        android:cacheColorHint="@android:color/transparent"/>
    <Button android:id="@+id/btn_show_map"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/view_on_map"
        android:textColor="@color/bg_color"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:background="@drawable/app_btn"
        android:visibility="gone"/>
    <LinearLayout android:id="@+id/more_loading_layout" 
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:background="#40000000"
	    android:visibility="gone">
		<ProgressBar android:id="@+id/more_loading"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="?android:attr/android:progressBarStyleSmall"/>
		
		<TextView android:id="@+id/label_more_loading"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="8dp"
		    android:textColor="@android:color/white"
		    android:text="@string/loading"/>
	</LinearLayout>
</RelativeLayout>
