<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/storage_bg">
    <RelativeLayout android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg">
        <TextView android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:textAppearance="@style/HeaderTextStyle"/>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/header"
    	android:paddingBottom="8dp">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout android:id="@+id/name_layout" 
                android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="6dp"
	            android:layout_marginRight="8dp">
            	<TextView android:id="@+id/common_name"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:textStyle="bold"
		            android:textColor="@color/list_item_name_text_color"/>
            	<TextView android:id="@+id/sci_name"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="4dp"
		            android:textSize="16sp"
		            android:autoLink="web"
		            android:clickable="true"
		            android:textColor="@drawable/text_selector"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/pager_layout" 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_marginTop="10dp"
			    android:layout_marginLeft="8dp"
		        android:layout_marginRight="8dp"
			    android:layout_height="@dimen/bike_image_height">
			    <com.mobisys.android.ibp.widget.SmartViewPager
			        android:id="@+id/pager"
			        android:layout_width="fill_parent"
			        android:layout_height="0dp"
			        android:layout_weight="1"/>
			    <com.viewpagerindicator.CirclePageIndicator
			        android:id="@+id/indicator"
			        android:padding="10dip"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        app:fillColor="@color/list_item_name_text_color"
			        app:strokeColor="@android:color/white"/>
			</LinearLayout>
			<TextView android:id="@+id/label_submitted_by"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="Submitted By:"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/submitted_by"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@android:color/white"/>
			<TextView android:id="@+id/label_place"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/place"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/place"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@android:color/white"/>
			<TextView android:id="@+id/label_observed_on"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/observed_on"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/observed_on"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@android:color/white"/>
			<TextView android:id="@+id/label_submitted"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/submitted"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/submitted"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@android:color/white"/>
			<TextView android:id="@+id/label_updated"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/updated"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/updated"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@android:color/white"/>
			<TextView android:id="@+id/label_notes"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="8dp"
	            android:text="@string/notes"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/list_item_name_text_color"/>
			<TextView android:id="@+id/notes"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_marginTop="4dp"
	            android:textSize="16sp"
	            android:textColor="@android:color/white"/>   	    
        </LinearLayout>    
    </ScrollView>    
</RelativeLayout>
