<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<RelativeLayout android:id="@+id/container"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="8dp"
		android:paddingBottom="25dp"
	    android:background="@drawable/bg_login">
	    <ImageView android:id="@+id/banner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="80dp"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/login_banner"/>
	    <LinearLayout android:id="@+id/login_container" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:orientation="vertical"
	        android:layout_alignParentBottom="true"
	        android:gravity="center_horizontal"
	        android:layout_centerHorizontal="true"
	        android:paddingTop="30dp"
	        android:paddingBottom="8dp"
	        android:background="@drawable/login_bg">
			<EditText android:id="@+id/edit_username"
			    android:layout_width="210dp"
			    android:layout_height="wrap_content"
			    android:paddingLeft="8dp"
			    android:inputType="textEmailAddress"
			    android:singleLine="true"
			    android:hint="@string/email"
			    android:textCursorDrawable="@null"
		        android:textColor="@color/header_title_text_color"
		        android:textColorHint="@color/questa_brown_color"
		        android:background="@drawable/login_edit_bg"/>
			<EditText android:id="@+id/edit_password"
			    android:layout_width="210dp"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="6dp"
			    android:paddingLeft="8dp"
			    android:inputType="textPassword"
		        android:hint="@string/password"
		        android:textCursorDrawable="@null"
		        android:textColor="@color/header_title_text_color"
		        android:textColorHint="@color/questa_brown_color"
		        android:background="@drawable/login_edit_bg"/>
			<Button android:id="@+id/btn_login"
			    android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        android:gravity="center_horizontal"
		        android:layout_marginTop="6dp"
		        android:background="@drawable/login_btn_selector"/>
			<ImageButton android:id="@+id/forgot_password"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:background="@drawable/forgot_password_selector"/>
			<ImageButton android:id="@+id/new_user"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="8dp"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:background="@drawable/new_user_selector"/>
			<LinearLayout android:id="@+id/provider_login_layout"
		        android:layout_width="285dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="8dp"
		       	android:gravity="center_horizontal"
		        android:orientation="horizontal">
		        <com.facebook.widget.LoginButton android:id="@+id/btn_fb"
		            android:layout_width="50dp"
		            android:layout_height="50dp"
		            android:background="@drawable/facebook"
		            android:padding="8dp"/>
		        <Button android:id="@+id/btn_google"
		            android:layout_width="60dp"
		            android:layout_height="60dp"
		            android:layout_marginLeft="16dp"
		            android:background="@drawable/google"
		            android:padding="8dp"/>
		    </LinearLayout>
		</LinearLayout>
	</RelativeLayout>    
